<body>
    <h2>axios get 회원가입 </h2>
    <form name="join">
        <fieldset>
            <legend>로그인</legend>
         ID<input type="text" name="id" placeholder="아이디"  required >
         <br>
         password<input type="password" name="pw" > 
        </fieldset>
        <br>

        <h3 id="result"></h3>
        <button type="button" onclick="axiosPost()">로그인</button>
    </form>
    

    <script>
        async function axiosPost(){
            const form =document.forms["join"];
            const rid= "dahyun";
            const rpw= "0110";
            const data = {
                id :form.id.value,
                pw :form.pw.value,                           
            }
            const res = await axios({
                method:"POST",
                url:"/axios",
                data : data,
            }) 

            console.log(res.data)
            if (res.data.id === rid && res.data.pw === rpw){
                console.log("성공");
                $("#result").html(`환영합니다.`).css("color","blue");
            }else{
                console.log("실패");
                $("#result").html(`아이디나 비밀번호를 다시 입력하세요.`).css("color","red");
            }
            console.log(res) 
            console.log(res.data)
                 
        }
    </script>
</body>
